pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/ElQuenta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Install System Dependencies') {
            steps {
                sh '''
                    sudo apt-get update
                    sudo apt-get install -y libgtk2.0-0 libgtk-3-0 libgbm-dev \
                    libnotify-dev libgconf-2-4 libnss3 xvfb
                '''
            }
        }
        stage('Run Cypress Tests') {
            steps {
                sh '''
                    xvfb-run --auto-servernum --server-args="-screen 0 1280x1024x24" \
                    npx cypress run --spec "cypress/e2e/loginPaul.cy.ts" --browser chrome --headless
                '''
            }
        }
    }
}
