pipeline {
    agent {
        docker {
            image 'cypress/base:20.14.0'
            args '-u root'
        }
    }
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/ElQuenta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Cypress Tests') {
            steps {
                sh '''
                    npx cypress run --spec "cypress/e2e/loginPaul.cy.ts" --browser chrome --headless
                '''
            }
        }
    }
}
