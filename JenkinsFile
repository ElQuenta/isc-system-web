pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/ElQuenta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
                sh 'sudo apt-get install xvfb'
            }
        }
        stage('cypress') {
            steps {
                sh 'npx cypress run --spec "cypress/e2e/loginPaul.cy.ts" --browser chrome'
            }
        }
    }
}